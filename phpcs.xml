<?xml version="1.0"?>
<ruleset name="Coding Standard">
    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg value="sp"/>

    <config name="ignore_warnings_on_exit" value="1"/>

    <file>./src</file>
    <file>./tests</file>

    <exclude-pattern>*/tests/diffs/*$</exclude-pattern>
	<exclude-pattern>*/tests/schema.php</exclude-pattern>
    <rule ref="PSR2"></rule>
    <rule ref="PSR12"></rule>
</ruleset>
